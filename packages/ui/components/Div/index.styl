.root
  &-with-shadow
    background-color $UI.pallete.white

  +web()
    &-s
      box-shadow 0 0 3px 0 rgba(0, 0, 0, .05), 0 1px 1px 0 rgba(0, 0, 0, .05)

    &-m
      box-shadow 0 0 1px 1px rgba(0, 0, 0, .02), 0 4px 6px 1px rgba(0, 0, 0, .06)

    &-l
      box-shadow 0 0 2px 1px rgba(0, 0, 0, .03), 0 6px 10px 2px rgba(0, 0, 0, .08)

    &-xl
      box-shadow 0 0 8px 2px rgba(0, 0, 0, .03), 0 16px 24px 0 rgba(0, 0, 0, .1)
